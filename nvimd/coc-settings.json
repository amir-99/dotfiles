{
 "coc.preferences.formatOnSaveFiletypes": ["markdown","yaml",  "json", "python", "sh", "markdown"],

  // python config
	"python.venvPath": "~/.venvs",
	"pyright.enable": true,
	"pyright.completion.snippetSupport": true,
	"suggest.enablePreview": true,
  "python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.linting.pylintUseMinimalCheckers": false,
	"python.linting.lintOnSave": true,
	"python.analysis.useLibraryCodeForTypes": true,

  // C by clangd
  "clangd.enabled": true,

  // shell language server
  "sh.enable": true,

  // json
  "json.enable": true,

  // markdownlint
  "markdownlint.onChange": true,
  "markdownlint.onOpen": true,

  // yaml
  "yaml.format.enable": true

}
